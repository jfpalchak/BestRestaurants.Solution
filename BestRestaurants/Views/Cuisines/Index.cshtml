@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;


<h4>Here are your cuisines:</h4>

@if (@Model.Count == 0)
{
  <h3>You don't have any cuisines, silly!</h3>
}
else 
{
  <ul>
    @foreach (Cuisine cuisine in Model)
    {
      <li>@Html.ActionLink($"{cuisine.Type}", "Details") </li>
    }
  </ul>
}

<p>@Html.ActionLink("Make a New Cuisine", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
