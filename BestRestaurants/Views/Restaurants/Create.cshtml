@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant;

<h4>Add a New Restaurant</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br/>
  @Html.LabelFor(model => model.City)
  @Html.TextBoxFor(model => model.City)
  <br/>
  @Html.LabelFor(model => model.Capacity)
  @Html.TextBoxFor(model => model.Capacity, new { type="number", min = "0", max = "1000"})
  <br/>
  @Html.LabelFor(model => model.Accessible)
  <br/>
  @Html.RadioButtonFor(model => model.Accessible, true) @:Yes
  @Html.RadioButtonFor(model => model.Accessible, false) @:No
  <br/>
  @Html.LabelFor(model => model.Cuisine)
  <br/>
  @Html.DropDownList("CuisineId")
  <br/>
  <br><input type="submit" value="Add" class="btn btn-primary"/>
}
<br/>
<p>@Html.ActionLink("Back to Restaurants", "Index")</p>
